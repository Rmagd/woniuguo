page {
    background: #fafafa;
}

.login {
    padding: 0 4%;
    width: 100%;
    box-sizing: border-box;
}

.login .tit {
    width: 190rpx;
    height: 190rpx;
    margin: 0 auto;
    padding: 20% 0 10% 0;
}

.login .tit image {
    width: 100%;
    height: 100%;
}

.login form {
    display: block;
    border-radius: 5px;
    overflow: hidden;
}

.login form {
    overflow: hidden;
    font-size: 28rpx;
}

.login form image {
    width: 50rpx;
    height: 50rpx;
    float: left;
    margin-right: 10px;
    display: block;
}

.login form .border {
    line-height: 90rpx;
    height: 90rpx;
    overflow: hidden;
    margin-top: 5%;
    font-size: 28rpx;
}

.login form .left {
    background: #fff;
    line-height: 90rpx;
    height: 90rpx;
    overflow: hidden;
    border-radius: 5px;
    padding: 0 5%;
}

.login form .left input {
    line-height: 90rpx;
    height: 90rpx;
}

.login form .right .reg_yanzhengma_time1 {
    font-size: 28rpx;
    line-height: 90rpx;
    height: 90rpx;
    color: #fff;
    border-radius: 5px;
    background: #00bcb8;
}

.login form .right .reg_yanzhengma_time2 {
    font-size: 28rpx;
    color: #fff;
    border-radius: 5px;
    background-color: #00bcb8;
    line-height: 90rpx;
    height: 90rpx;
}

.login form .right {
    width: 30%;
    float: right;
    text-align: center;
    line-height: 90rpx;
    height: 90rpx;
}

.login form .border input {
    text-align: left;
    width: 67%;
    float: left;
    border-radius: 5px;
    background: #fff;
    box-sizing: border-box;
    padding: 3% 5%;
    line-height: 90rpx;
    height: 90rpx;
}

.login form .obtain {
    text-align: center;
}

.login .button {
    height: 90rpx;
    margin-top: 30px;
    background-color: #2cca77;
    border-radius: 5px;
    text-align: center;
    color: #fff;
    font-weight: bold;
    font-size: 32rpx;
    line-height: 90rpx;
}

.radio-group {
    padding-top: 5%;
}

.radio-group .radio {
    width: 50%;
    display: inline-block;
    text-align: center;
    background: #fff;
    padding: 4% 0;
}