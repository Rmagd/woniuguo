.address {
    width: 100%;
    height: 25.5vh;
    position: relative;
    background: #fff;
}

.cover-img {
    position: absolute;
    left: 20rpx;
    top: 700rpx;
    width: 80rpx;
    height: 80rpx;
    transition: all 2s;
}

.cover-img:hover {
    transform: rotate(720deg);
}

.rotate {
    transform: rotate(720deg);
}

.warning-info {
    display: flex;
    width: 300rpx;
    margin: 0 auto;
    margin-top: 100rpx;
    padding: 10rpx 20rpx;
    color: #333;
    font-size: 28rpx;
    background: #fff;
    text-align: center;
}

.warning-info cover-view {
    display: inline-block;
    color: #0090ec;
    margin: 0;
    padding: 0rpx;
}

.warning-info-img {
    width: 60rpx;
    height: 62rpx;
    margin: 0 auto;
    margin-top: 15rpx;
    text-align: center;
}

.user-face-module {
    overflow: hidden;
    background: #FFF;
    display: flex;
    padding-top: 45rpx;
    padding-left: 30rpx;
}

.user-face {
    width: 120rpx;
    height: 120rpx;
    border-radius: 60rpx;
    box-shadow: 0 0 10rpx #333;
    background: #FFF;
}

.user-info {
    flex: 0.8;
    overflow: hidden;
    display: flex;
}

.info {
    margin-left: 30rpx;
    font-size: 26rpx;
    color: #888888;
}

.info view {
    display: block;
    width: 100%;
}

.user-info .info view:first-child {
    display: block;
    font-size: 32rpx;
    color: #333333;
    margin: 15rpx 0;
    font-weight: bold;
}

.user-info image {
    width: 36rpx;
    height: 36rpx;
    margin-top: 4rpx;
    margin-left: 20rpx;
}

.gender-icon {
    width: 27rpx;
    height: 27rpx;
    margin-left: 15rpx;
}

.phone-image {
    flex: 0.2;
    overflow: hidden;
    position: relative;
    top: 22rpx;
}

.phone-image image {
    width: 64rpx;
    height: 64rpx;
    margin-top: 20rpx;
    margin-right: 20rpx;
}

.button-container {
    width: 750rpx;
    height: 110rpx;
    position: absolute;
    left: 0;
    bottom: 0;
    display: flex;
    justify-content: space-between;
    border-top: 1px solid #888888;
    align-items: center;
}

.button-container button {
    border: 2rpx solid #888888;
    border-radius: 10rpx;
    background: #fff;
    font-size: 28rpx;
    color: #555555;
    width: 190rpx;
    height: 60rpx;
    line-height: 56rpx;
}

.button-container button::after {
    border: none;
}