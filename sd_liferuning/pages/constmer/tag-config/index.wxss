page {
    background: #f2f2f2;
}

.page-content {
    padding-bottom: 0rpx;
}

.sub-title-panel {
    width: 95%;
    margin: 20rpx auto;
    background: #fff;
    margin-bottom: 20rpx;
    border-radius: 10rpx;
}

.sub-title-panel .title {
    height: 80rpx;
    line-height: 80rpx;
    font-size: 30rpx;
    padding: 0 20rpx;
    color: #20ad20;
}

.sub-title-panel .content {
    overflow: hidden;
}

.tag-group {
    font-size: 30rpx;
    padding: 20rpx;
}

.tag-item {
    font-size: 26rpx;
    padding: 10rpx 30rpx;
    display: inline-block;
    margin: 10rpx 20rpx;
    text-align: center;
    border-radius: 10rpx;
    color: #333;
}

.sub-title-panel:nth-child(1) .tag-group .active,.active {
    background: #f6baad;
    color: #e62900;
}

.sub-title-panel:nth-child(2) .tag-group .active {
    background: #cfebd8;
    color: #029837;
}

.sub-title-panel:nth-child(3) .tag-group .active {
    background: #98c2fa;
    color: #0e5bba;
}

button {
    width: 500rpx;
    height: 60rpx;
    line-height: 60rpx;
    background: #22ae22;
    color: #FFF;
    font-size: 30rpx;
    margin-top: 20rpx;
}