.module-item {
    border-top: 1rpx solid #EEEEEE;
    border-bottom: 1rpx solid #EEEEEE;
    width: 100%;
    display: flex;
    padding: 20rpx 0;
    margin-bottom: 10rpx;
}

.module-item-text {
    line-height: 80rpx;
    font-size: 30rpx;
    flex: 1;
    margin: 0 10rpx 0 20rpx;
}

.module-item-text-left {
    color: #111;
}

.module-item-text .status {
    color: #666;
}

.module-item-text-right {
    float: right;
    color: #1DABF3;
}

.module-item-text-face {
    width: 80rpx;
    height: 80rpx;
    background: #f90;
    float: right;
    line-height: 0;
}

.module-item .iconfont {
    line-height: 80rpx;
    float: right;
    margin-right: 15rpx;
}