page {
    background: #F7F7F7;
}

.iconfont {
    font-size: 30rpx;
}

.balance-model {
    width: 100%;
    height: 300rpx;
    color: #FFF;
}

.balance-item-left {
    float: left;
    margin: 70rpx 50rpx 0;
}

.balance-item-left .title {
    font-size: 28rpx;
}

.balance-item-left .price {
    font-size: 40rpx;
    margin-top: 30rpx;
}

.balance-item-right {
    float: right;
    font-size: 28rpx;
    border-left: 1rpx dashed #FFF;
    padding: 0 50rpx 0 30rpx;
    margin-top: 30rpx;
}

.info-item {
    padding: 15rpx 0;
}

.info-item view {
    margin: 5rpx 0;
}

.fn-btn-group {
    width: 100%;
    background: #FFF;
    padding: 15rpx 0;
    margin: 15rpx 0;
    display: flex;
}

.fn-btn-item {
    width: 50%;
    text-align: center;
    font-size: 28rpx;
    float: left;
}

.fn-btn-item:first-child {
    border-right: 1rpx solid #f2f2f2;
}

.fn-btn-item image {
    width: 50rpx;
    height: 50rpx;
    display: block;
    margin: 15rpx auto;
}

.income-module {
    background: #FFF;
    width: 100%;
    color: #666;
    margin-bottom: 20rpx;
}

.income-module-title {
    display: flex;
    justify-content: space-between;
    height: 80rpx;
    line-height: 80rpx;
    padding: 0 20rpx;
    font-size: 30rpx;
    border-bottom: 1rpx solid #F7F7F7;
    font-weight: bold;
}

.income-module-item {
    display: flex;
    justify-content: space-around;
    font-size: 30rpx;
    text-align: center;
    padding: 0 20rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1rpx solid #F7F7F7;
}

.income-module-item text {
    flex: 1;
}

.income-module-item text:first-child {
    text-align: left;
}

.income-module-item text:last-child {
    text-align: right;
}

.statement-module {
    background: #FFF;
    width: 100%;
    color: #666;
}

.statement-module-title {
    display: flex;
    justify-content: space-between;
    line-height: 80rpx;
    padding: 0 20rpx;
    font-size: 30rpx;
    font-weight: bold;
    border-bottom: 1rpx solid #F7F7F7;
}

.statement-module-item {
    display: flex;
    padding: 20rpx;
    border-bottom: 1rpx solid #F7F7F7;
}

.statement-module-item-left {
    background: #06C1AE;
    color: #FFF;
    height: 80rpx;
    padding: 20rpx 0;
    width: 120rpx;
    border-radius: 10rpx;
}

.statement-module-item-left text {
    display: block;
    font-size: 30rpx;
    text-align: center;
    font-weight: bold;
}

.statement-module-item-center {
    padding: 10rpx 0;
    margin: 0 0 0 30rpx;
    flex: 1;
}

.statement-module-item-center text {
    display: block;
    font-size: 30rpx;
}

.statement-module-item-center text:first-child {
    font-weight: bold;
    margin: 0 0 10rpx;
}

.statement-module-item-right {
    line-height: 120rpx;
    font-size: 40rpx;
}