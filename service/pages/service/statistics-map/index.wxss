.switch-panel {
    width: 100%;
    font-size: 30rpx;
}

.switch-panel-title {
    margin: 20rpx;
    border-radius: 10rpx;
    height: 80rpx;
    line-height: 80rpx;
    display: flex;
    border: 1rpx solid #20AD20;
}

.switch-panel-title-item {
    flex: 1;
    text-align: center;
}

.switch-panel-title .active {
    background: #20AD20;
    color: #FFF;
}

.switch-panel-content {
    margin: 20rpx;
}

.switch-panel-content-item {
    display: none;
    width: 100%;
}

.switch-panel-content .active {
    display: block;
}

.data-table {
    border-bottom: 10rpx solid #CCCCCC;
    overflow: hidden;
}

.data-table-item {
    width: 49%;
    float: left;
    text-align: center;
    border-right: 1rpx solid #CCCCCC;
    margin: 10rpx 0;
}

.data-table-item:nth-child(2n) {
    border: none;
}

.data-table-item view:last-child {
    color: #14B5FA;
}

.map-module {
    padding: 20rpx 0;
}

.map-module-title {
    margin: 0 0 10rpx;
}

.map-module-content canvas {
    width: 700rpx;
    height: 250rpx;
    margin: 0 auto;
    border: 1rpx solid #CCC;
}