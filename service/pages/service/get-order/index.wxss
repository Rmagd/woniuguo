page {
    background: #f1f2f4;
}

.switch-panel-content {
    width: 100%;
    height: 100%;
    padding-bottom: 100rpx;
}

.module {
    width: 100%;
    background: #fff;
    margin: 20rpx auto 0 auto;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
}

.border-bottom {
    border-bottom: 2rpx solid #e2e2e2;
    width: 100%;
}

.title {
    width: 700rpx;
    margin: 20rpx auto;
    display: flex;
    justify-content: space-between;
}

.title text:first-child {
    font-size: 32rpx;
    color: #000000;
}

.title text:last-child {
    font-size: 28rpx;
    color: #20ad20;
}

.green-text {
    color: #ff9833;
}

.subtitle {
    width: 700rpx;
    margin: 20rpx auto;
    display: flex;
    justify-content: space-between;
    font-size: 26rpx;
    color: #888888;
}

.address-item {
    color: #333333;
    font-size: 30rpx;
    width: 680rpx;
    margin: 20rpx auto;
    display: flex;
}

.address-item image {
    width: 44rpx;
    height: 44rpx;
}

.address-item text {
    width: 600rpx;
    display: inline-block;
    color: #333333;
    font-size: 30rpx;
    margin-left: 20rpx;
    line-height: 44rpx;
}

.item {
    width: 700rpx;
    margin: 30rpx auto;
    display: flex;
    font-size: 26rpx;
    color: #333;
}

.flex {
    align-items: center;
}

.item text:first-child {
    width: 140rpx;
}

.item .context {
    flex: 1;
}

.item .voice {
    width: 120rpx;
    height: 46rpx;
    background: #5b9bf3;
    border-radius: 10rpx;
    display: flex;
    align-items: center;
}

.item .voice image {
    width: 22rpx;
    height: 32rpx;
    display: inline-block;
    margin: 0 10rpx 0 20rpx;
}

.yueyin-image {
    width: 160rpx;
    height: 50rpx;
}

.goods-image {
    width: 170rpx;
    height: 170rpx;
    border-radius: 10rpx;
}

.container-btn button {
    width: 640rpx;
    height: 80rpx;
    font-size: 38rpx;
    background: #20ad20;
    color: #fff;
    margin: 30rpx auto;
    border-radius: 15rpx;
    line-height: 76rpx;
}

.time {
    display: inline-block;
    color: #fff;
    font-size: 26rpx;
}

.icon {
    width: 44rpx;
    height: 44rpx;
    display: flex;
    align-items: center;
    text-align: center;
}

.start_address {
    display: block;
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
    background: #2e8ef0;
}

.end_address {
    display: block;
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
    background: #f0b72e;
}
.picker{
  background: white;
  width:100%;
  text-align:center;
  padding-top: 20rpx;
  padding-bottom: 30rpx;
}
.arrow-icon{
width:32rpx;
height:25rpx;
margin:0 10rpx
}