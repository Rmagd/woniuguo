<view class="container">
    <view class="module-item">
        <image class="face" src="{{info.head}}"></image>
        <view class="user">
            <text class="username">{{info.uname}}</text>
            <text class="phonenumber">{{info.tel}}</text>
        </view>
    </view>
    <view class="module-item">
        <view class="module-item-text">
            <text class="module-item-text-left">性别</text>
            <text class="module-item-text-right">{{info.sex}}</text>
        </view>
    </view>
    <view class="module-item">
        <view class="module-item-text">
            <text class="module-item-text-left">身份认证<text class="status"></text>
            </text>
            <text class="module-item-text-right" wx:if="{{info.status==3}}">（已认证）</text>
            <text class="module-item-text-right" wx:else>（未认证）</text>
        </view>
    </view>
    <navigator class="module-item" url="/service/pages/service/bankcard-binding/index">
        <view class="module-item-text">
            <text class="module-item-text-left">开户行设置</text>
            <text class="module-item-text-right">去设置</text>
        </view>
        <view class="iconfont icon-dayuhao"></view>
    </navigator>
    <navigator class="module-item" url="/service/pages/service/summary/index">
        <view class="module-item-text">
            <text class="module-item-text-left">个人简介</text>
            <text class="module-item-text-right">去设置</text>
        </view>
        <view class="iconfont icon-dayuhao"></view>
    </navigator>
    <navigator class="module-item" url="/service/pages/service/userauth-pay/index">
        <view class="module-item-text">
            <text class="module-item-text-left">保证金</text>
        </view>
        <view class="iconfont icon-dayuhao"></view>
    </navigator>
</view>
