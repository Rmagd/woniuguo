.container {
    margin-bottom: 15rpx;
}

.input-group {
    width: 95%;
    border-bottom: 1rpx solid #dadada;
    height: 80rpx;
    line-height: 80rpx;
    margin: 0 2.5%;
    font-size: 30rpx;
}

.input-group input {
    line-height: 80rpx;
    height: 80rpx;
}

.page-help {
    color: #14B5FA;
}

.img-group {
    width: 95%;
    margin: 0 2.5%;
    display: flex;
}

.img-item {
    flex: 1;
    height: 300rpx;
    margin: 1rpx 20rpx;
}

.img-item text {
    width: 100%;
    text-align: center;
    font-size: 30rpx;
    display: block;
    margin: 10rpx 0;
}

.img-item image {
    width: 100%;
    box-shadow: 0 0 5rpx #dadada;
    height: 200rpx;
}

.confirm {
    background: #14B5FA;
    color: #FFF;
    height: 80rpx;
    line-height: 80rpx;
    width: 95%;
    margin: 0 2.5%;
    font-size: 30rpx;
}