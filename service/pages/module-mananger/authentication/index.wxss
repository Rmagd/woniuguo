page {
    width: 100%;
    height: 100%;
}

.page-content {
    width: 100%;
    height: 100%;
}

.title {
    margin: 140rpx 0 100rpx;
    color: #FFF;
    text-align: center;
}

.font-big {
    font-size: 40rpx;
}

.font-small {
    font-size: 19rpx;
    font-family: 'Arial';
    margin: 20rpx 0;
}

.form-group {
    background: #fff;
    width: 600rpx;
    min-height: 380rpx;
    margin: 0 auto;
    border-radius: 15rpx;
    padding: 70rpx 0;
}

.input-group {
    font-size: 24rpx;
    height: 60rpx;
    line-height: 60rpx;
    border-bottom: 1rpx solid #e5e5e5;
    margin: 20rpx 60rpx;
}

.form-btn {
    width: 450rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 24rpx;
    margin: 60rpx auto 0;
    background: #20ad20;
    color: #FFF;
}

radio {
    transform: scale(.9);
}